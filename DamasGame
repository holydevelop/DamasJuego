        "def GenerarFichas(table): #[X][Y] las coordenadas ACORDARSE\n",
        "#Generacion del jugador numero 1\n",
        "  for x in range(3):\n",
        "    if(x%2 == 0):\n",
        "      for y in range(4):\n",
        "        table[x][(2*y)-1] = 1\n",
        "        table[7-x][(2*y)] = 2\n",
        "    elif(x%2 == 1):\n",
        "        for y in range(4):\n",
        "          table[x][(2*y)] = 1\n",
        "          table[7-x][(2*y)-1] = 2\n",
        "\n",
        "  return table"
      ],
      "metadata": {
        "id": "f_-30Vtyu7mX"
      },
      "execution_count": 34,
      "outputs": []
    },
    {
      "cell_type": "code",
      "source": [
        "def ImprimirTablero(table):\n",
        "  for i in table:\n",
        "    mensaje = \"\"\n",
        "    for j in i:\n",
        "      mensaje += str(j) + \" \"\n",
        "    mensaje += \"\\n\"\n",
        "    print(mensaje)"
      ],
      "metadata": {
        "id": "v93XjT9ipTkj"
      },
      "execution_count": 35,
      "outputs": []
    },
