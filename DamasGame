        "def ImprimirTablero(table):\n",
        "  for i in table:\n",
        "    mensaje = \"\"\n",
        "    for j in i:\n",
        "      mensaje += str(j) + \" \"\n",
        "    mensaje += \"\\n\"\n",
        "    print(mensaje)"
      ],
