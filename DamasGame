        "def GenerarFichas(table): #[X][Y] las coordenadas ACORDARSE\n",
        "#Generacion del jugador numero 1\n",
        "  for x in range(3):\n",
        "    if(x%2 == 0):\n",
        "      for y in range(3):\n",
        "        table[x][(2*y)-1] = 1\n",
        "    elif(x%2 == 1):\n",
        "        for y in range(3):\n",
        "          table[x][(2*y)] = 1\n",
        "\n",
        "  return table"
      ],
      "metadata": {
        "id": "f_-30Vtyu7mX"
      },
